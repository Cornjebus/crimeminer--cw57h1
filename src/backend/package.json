{
  "name": "crimeminer-backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src/api-gateway",
    "src/auth-service",
    "src/case-service",
    "src/evidence-service",
    "src/ml-service",
    "src/notification-service",
    "src/search-service",
    "src/storage-service"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:prod": "tsc -b --sourceMap false --declarationMap false",
    "clean": "rimraf **/dist **/coverage",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:ci": "eslint \"src/**/*.ts\" --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:security": "npm audit && snyk test",
    "prepare": "husky install",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@aws-crypto/client-node": "^4.0.0",
    "@aws-sdk/client-kms": "^3.0.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@azure/storage-blob": "12.17.0",
    "@crimeminer/common": "^1.0.0",
    "@elastic/elasticsearch": "8.9.0",
    "@elastic/elasticsearch-security": "8.9.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/elasticsearch": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/security": "^3.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.37.0",
    "@opentelemetry/sdk-node": "^0.41.1",
    "@prometheus/client": "^0.5.0",
    "@socket.io/redis-adapter": "^8.2.1",
    "@tensorflow/tfjs-node-gpu": "^4.10.0",
    "async": "^3.2.4",
    "aws-sdk": "^2.1450.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "correlation-id": "4.0.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-correlation-id": "^2.0.0",
    "express-rate-limit": "6.9.0",
    "express-validator": "7.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0",
    "helmet": "7.0.0",
    "http-proxy-middleware": "2.0.6",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "ioredis": "5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "9.0.0",
    "kafkajs": "^2.2.4",
    "keycloak-connect": "21.0.0",
    "mime-types": "^2.1.35",
    "mongoose": "^7.0.0",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.14.1",
    "rate-limiter-flexible": "^2.4.1",
    "sharp": "^0.32.5",
    "socket.io": "^4.6.1",
    "speakeasy": "2.0.0",
    "type-graphql": "^1.1.1",
    "uuid": "^9.0.0",
    "winston": "3.10.0",
    "winston-daily-rotate-file": "4.7.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@faker-js/faker": "8.0.0",
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.5.0",
    "@nestjs/testing": "^10.0.0",
    "@snyk/protect": "^1.1120.0",
    "@types/jest": "^29.5.0",
    "@types/keycloak-connect": "^8.0.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "aws-sdk-mock": "^5.8.0",
    "eslint": "^8.40.0",
    "husky": "^8.0.0",
    "ioredis-mock": "8.2.2",
    "jest": "^29.0.0",
    "lint-staged": "^13.2.0",
    "mock-aws-s3": "4.0.2",
    "mongodb-memory-server": "^8.0.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0",
    "snyk": "latest",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}