{
  "name": "@crimeminer/auth-service",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80}}'",
    "test:security": "jest --testMatch='**/*.security.test.ts'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "audit": "npm audit --production",
    "scan": "snyk test",
    "scan:container": "snyk container test",
    "deps:check": "npm-check-updates",
    "deps:update": "npm-check-updates -u && npm install",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.0.0",
    "@elastic/elasticsearch": "8.9.0",
    "@elastic/elasticsearch-security": "8.9.0",
    "@nestjs/common": "^10.0.0",
    "aws-sdk": "^2.1450.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "correlation-id": "4.0.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-correlation-id": "^2.0.0",
    "express-rate-limit": "6.9.0",
    "express-validator": "7.0.1",
    "helmet": "7.0.0",
    "http-proxy-middleware": "2.0.6",
    "inversify": "^6.0.1",
    "ioredis": "5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "9.0.0",
    "keycloak-connect": "21.0.0",
    "mongoose": "^7.0.0",
    "morgan": "1.10.0",
    "rate-limiter-flexible": "^2.4.1",
    "speakeasy": "2.0.0",
    "uuid": "^9.0.0",
    "winston": "3.10.0",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@faker-js/faker": "8.0.0",
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/keycloak-connect": "^8.0.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "husky": "^8.0.0",
    "ioredis-mock": "8.2.2",
    "jest": "^29.0.0",
    "lint-staged": "^13.2.0",
    "mongodb-memory-server": "^8.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0",
    "snyk": "latest",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}